/* pages/detail/detail.wxss */

.picker{
  display: flex;
  padding:40rpx;
  background-color: #2CC2C3;
  font-size: 50rpx;
  color: rgb(0, 0, 0);
}

.info{
  width: 100%;
  height: 15%;
  display: flex;
  flex-direction: row;
  background-color: #2CC2C3;
  justify-content: space-between;
  font-size: 40rpx;
}

.pw{
  width: 60%;
  background-color: #2CC2C3;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.item{
  font-size: 60rpx;
}

.oneline{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 20rpx;
  border-bottom: 1rpx solid #dddddd;
}

.twoline{
  display: flex;
  border-bottom: 3rpx solid #dddddd;
  flex-direction: row;
  justify-content: space-between;
}