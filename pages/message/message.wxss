/* pages/message/message.wxss */
.container {
  padding: 20px;
}

.header {
  text-align: center;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.table {
  border: 1px solid #ccc;
  border-collapse: collapse;
  margin-bottom: 20px;
}

.row {
  display: flex;
  flex-direction: row;
}

.header-row {
  background-color: #eee;
}

.header-cell,
.cell {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  text-align: center;
}