/* pages/profile/profile.wxss */
.container {
  height: 100%;
  width: 100%;
}
.profile{
  height: 10%;
  width: 100%;
  background-color: #2CC2C3;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.proleft{
  display: flex;
  flex-direction: row;
  justify-content: left;
  font-size: 50rpx;
}
.address{
  display: flex;
  flex-direction: row;
  background-color: #2CC2C3;
  font-size: 40rpx;
}
.pho{
  display: flex;
  border-radius: 50%;
}


.button {
  /* display: block; */
  border-bottom: 1rpx solid #dddddd;
  width: 100%;
  padding: 30rpx;
  background-color: #ffffff;
  color: rgb(0, 0, 0);
  font-size: 30rpx;
  text-align: left;
  margin-bottom: 1rpx;
  border-radius: 4rpx;
}
