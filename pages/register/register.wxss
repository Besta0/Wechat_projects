/* pages/register/register.wxss */
.choice{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.tt:hover{
  
  font-size: 30rpx;
  color:blue;
}

.form-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10px;
}

.label {
  width: 80px;
  text-align: right;
  margin-right: 10px;
}

.input {
  flex: 1;
  height: 30px;
  font-size: 14px;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.submit-btn {
  margin-top: 20px;
  width: 100%;
  height: 40px;
  font-size: 16px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 5px;
}